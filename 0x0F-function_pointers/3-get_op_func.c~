#include <stdio.h>
#include <stdlib.h>
#include "calc.h"
/**
 * get_op_func - Calls correct operation function
 * @s: Operator passed as argument
 * Return: Pointer to correct op function
 */

int (*get_op_func(char *s))(int, int)
{
	op_t ops[] = {
		{"+", op_add},
		{"-", op_sub},
		{"*", op_mul},
		{"/", op_div},
		{"%", op_mod},
		{NULL, NULL}
	};
	int i = 0;

	while (i != NULL)
	{
		if (s == ops[i])
		{
			return (ops[i + 1]);
		}
	}
	return (NULL);
}
